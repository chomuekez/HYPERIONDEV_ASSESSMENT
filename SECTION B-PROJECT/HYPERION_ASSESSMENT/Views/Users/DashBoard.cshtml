<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - HYPERION ASSESSMENT</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" asp-append-version="true" />
    <link href="~/css/site.css" rel="stylesheet" />
    <script src="~/js/site.js"></script>
    <style>

        .coursebtn {
            background-color:#006080;
            color: white;
            padding: 16px;
            font-size: 16px;
            border: none;
        }

        .showCourses {
            position: relative;
            display: inline-block;
          
        }
       

        .CourseList {
            display: none;
            position: absolute;
            background-color: #f1f1f1;
            min-width: 160px;
            box-shadow: 0px 8px 16px 0px rgba(0,0,0,0.2);
            z-index: 1;
        }

        .CourseList a {
                color: black;
                padding: 15px 12px;
                text-decoration: none;
                display: block;
            }

                .CourseList a:hover {
                    background-color: #ddd;
                }

        .showCourses:hover .CourseList {
            display: block;
        }

        .showCourses:hover .coursebtn {
            background-color: #3e8e41;
        }

        .userbtn {
            background-color: #006080;
            color: white;
            padding: 16px;
            font-size: 16px;
            border: none;
        }

        .showUsers {
            position: relative;
            display: inline-block;
        }


        .UserList {
            display: none;
            position: absolute;
            background-color: #f1f1f1;
            min-width: 160px;
            box-shadow: 0px 8px 16px 0px rgba(0,0,0,0.2);
            z-index: 1;
        }

            .UserList a {
                color: black;
                padding: 15px 12px;
                text-decoration: none;
                display: block;
            }

                .UserList a:hover {
                    background-color: #ddd;
                }

        .showUsers:hover .UserList {
            display: block;
        }

        .showUsers:hover .userbtn {
            background-color: #3e8e41;
        }

        .studentbtn {
            background-color: #006080;
            color: white;
            padding: 16px;
            font-size: 16px;
            border: none;
        }

        .showStudents {
            position: relative;
            display: inline-block;
        }


        .studentList {
            display: none;
            position: absolute;
            background-color: #f1f1f1;
            min-width: 160px;
            box-shadow: 0px 8px 16px 0px rgba(0,0,0,0.2);
            z-index: 1;
        }

            .studentList a {
                color: black;
                padding: 15px 12px;
                text-decoration: none;
                display: block;
            }

                .studentList a:hover {
                    background-color: #ddd;
                }

        .showStudents:hover .studentList {
            display: block;
        }

        .showStudent:hover .studentbtn {
            background-color: #3e8e41;
            
        }

    </style>

</head>
<body style="background-color: #006080;">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <div class="showCourses"> 
                                <button class="coursebtn">
                                    Courses

                                </button>
                                <div class="CourseList">                                   
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Courses" asp-action="Index">View Available Courses</a>
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Courses" asp-action="Create">Add a new Course</a>
                                    <a href="https://www.hyperiondev.com/on-site-courses/">View on-site Bootcamps</a>
                                    <a href="https://www.hyperiondev.com/courses/">View online Bootcamps</a>

                                </div>
                            </div>
                        </li>
                       
                       
                        
                        
                        <li class="nav-item">
                            <a class="nav-link text-dark" href="https://www.hyperiondev.com/contact/">Contact Us  |</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" href="https://www.hyperiondev.com/courses/">Learn more about our bootcamps  |</a>
                        </li>
                        <li class="nav-item">
                            <div class="showUsers">
                                <button class="userbtn">
                                    Users

                                </button>
                                <div class="UserList">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Users" asp-action="Index">View Available Users</a>
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Users" asp-action="Create">Add a new User</a>
                                   

                                </div>
                            </div>
                        </li>
                        <li class="nav-item">
                            <div class="showStudents">
                                <button class="studentbtn">
                                    Students

                                </button>
                                <div class="studentList">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Students" asp-action="Index">View Available Students</a>
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Students" asp-action="Create">Add a new Student</a>
                                   

                                </div>
                            </div>
                        </li>
                        

                    </ul>
                </div>
            </div>
        </nav>
    </header>
   
</body>
</html>
