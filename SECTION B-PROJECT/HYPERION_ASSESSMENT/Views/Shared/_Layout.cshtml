@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor _httpContextAccessor;
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - HYPERION ASSESSMENT</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" asp-append-version="true" />
    <link href="~/css/site.css" rel="stylesheet" />    
    <script src="~/js/site.js"></script>

</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Users" asp-action="DashBoard">HYPERION ASSESSMENT</a>

                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <ul class="navbar-nav flex-grow-1">
                        @if (_httpContextAccessor.HttpContext.User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item" style="color:#00ff00;font-family:Arial, Helvetica, sans-serif;font-size:16.5px;font-weight:bold">
                                Learn more about our bootcamps
                            </li>
                            <li class="nav-item"> &nbsp;| &nbsp;</li>

                            <li class="nav-item" style="color:darkblue;font-family:Arial, Helvetica, sans-serif;font-size:16.5px;font-weight:bold">
                                Join our next info session webinar  !
                            </li>
                           
                            
                           
                            
                           
                            foreach (var claim in _httpContextAccessor.HttpContext.User.Claims)
                            {
                                <li id="value" style="position:absolute;left:80%;background-color:steelblue;color:white;">
                                   
                                        @claim.Value
                                    
                                </li>

                                <li>

                                    <a asp-area="" asp-controller="Users" asp-action="Logout" style="position:absolute;left:96%;">Logout</a>
                                </li>
                               

                            }
                            
                        }
                        else
                        {
                            <li class="nav-item" style="color:#00ff00;font-family:Arial, Helvetica, sans-serif;font-size:16.5px;font-weight:bold">
                                Learn more about our bootcamps
                            </li>
                            <li class="nav-item"> &nbsp;| &nbsp;</li>

                            <li class="nav-item" style="color:darkblue;font-family:Arial, Helvetica, sans-serif;font-size:16.5px;font-weight:bold">
                                Join our next info session webinar  !
                            </li>
                             <li class="nav-item">
                                &nbsp;| &nbsp;
                            <a class="nav-item" asp-area="" asp-controller="Users" asp-action="Create">Register Now</a>
                            </li>
                            <li class="nav-item">
                                &nbsp;| &nbsp;
                                <a class="nav-item" asp-area="" asp-controller="Users" asp-action="Login">Login</a>
                            </li>
                        }


                 </ul>
                </div>
            </div>
        </nav>
      
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>


  @*  <div class="modal" tabindex="-1" id="form-modal">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title"></h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                   
                </div>
               
            </div>
        </div>
    </div>*@

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - HYPERION ASSESSMENT - <a asp-area="" asp-controller="Home" asp-action="Privacy"></a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
